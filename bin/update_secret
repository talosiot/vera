#!/usr/bin/env bash

help() {
    echo "Store a new secret in aws secret manager"
    echo "-n name of the secret"
    echo "-s secret string"
    echo "-f a filename.  The contents of that file will be stored as a secret string"
    exit 1
}

while getopts ":n:f:s:" arg; do
    case $arg in
        n) NAME=$OPTARG;;
        f) SECRET=file://$OPTARG ;;
        s) SECRET=$OPTARG ;;
        *) help ;;
    esac
done

[ -z "$SECRET" ] && help
[ -z "$NAME" ] && help

aws secretsmanager create-secret --name $NAME --secret-string $SECRET
