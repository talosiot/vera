#!/usr/bin/env bash
set -e


if [[ -z $AWS_ACCESS_KEY_ID || -z $AWS_SECRET_ACCESS_KEY || -z $AWS_DEFAULT_REGION || -z $AWS_ACCOUNT_ID ]] 
then
    echo "Must set AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_DEFAULT_REGION, and AWS_ACCOUNT_ID"
    false
fi

gh secret set AWS_ACCESS_KEY_ID -b $AWS_ACCESS_KEY_ID
gh secret set AWS_SECRET_ACCESS_KEY -b $AWS_SECRET_ACCESS_KEY
gh secret set AWS_DEFAULT_REGION -b $AWS_DEFAULT_REGION
gh secret set AWS_ACCOUNT_ID -b $AWS_ACCOUNT_ID
