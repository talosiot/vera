#!/usr/bin/env bash

help() {
    echo "Delete a secret"
    echo "-n name of the secret"
    exit 1
}

while getopts ":n:p:" arg; do
    case $arg in
        n) NAME=$OPTARG;;
        *) help ;;
    esac
done

[ -z "$NAME" ] && help

val=$(aws secretsmanager delete-secret --secret-id $NAME) || exit 1

echo $val
