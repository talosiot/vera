#!/usr/bin/env bash

help() {
    echo "Store a new secret in aws secret manager"
    echo "-n name of the secret"
    echo "-s secret string"
    echo "-f a filename.  The contents of that file will be stored as a secret string"
    echo "-u true will update the secret instead of creating"
    exit 1
}

while getopts ":n:f:s:" arg; do
    case $arg in
        n) NAME=$OPTARG;;
        f) SECRET=file://$OPTARG ;;
        s) SECRET=$OPTARG ;;
        u) update=true
        *) help ;;
    esac
done

[ -z "$SECRET" ] && help
[ -z "$NAME" ] && help

[ "$update" ] && aws secretsmanager update-secret --name $NAME --secret-string $SECRET
[ -z "$update" ] && aws secretsmanager create-secret --name $NAME --secret-string $SECRET
